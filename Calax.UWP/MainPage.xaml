    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    Background="{ThemeResource SystemControlAcrylicWindowBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" Background="{ThemeResource SystemControlAcrylicElementBrush}" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <Image Source="Assets/WindowIcon.png"
           Width="16" Height="16"
           Margin="8,0,0,0"/>
            <TextBlock x:Name="AppTitleTextBlock"
               Text="Calax" 
               Style="{StaticResource CaptionTextBlockStyle}" 
               Grid.Column="1"
               VerticalAlignment="Center"
               Margin="28,0,0,0"/>
        </Grid>
        <muxc:NavigationView Grid.Row="1" PaneDisplayMode="LeftCompact" IsBackButtonVisible="Collapsed" Header="{x:Bind ViewModel.NavigationHeader,Mode=OneWay}" x:Name="MainNavigationView" SelectionChanged="_mainNavigationView_SelectionChanged">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="Calculator" Tag="Calculator" Icon="Calculator" />
                <muxc:NavigationViewItem Content="Slab Sets" Tag="Slab Sets" Icon="Library" />
                <muxc:NavigationViewItem Content="New Slab Set" Tag="New Slab Set" Icon="Add" />
            </muxc:NavigationView.MenuItems>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Frame x:Name="NavigationViewContentFrame" NavigationFailed="_navigationViewContentFrame_NavigationFailed"/>
            </ScrollViewer>
        </muxc:NavigationView>
