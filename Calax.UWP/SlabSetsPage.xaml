                            <DataTemplate>
                                <muxc:NumberBox Value="0" Minimum="0" Maximum="1" Margin="3,4,3,3"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellEditingTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>-->
            <ListView ItemsSource="{x:Bind ViewModel.SelectedSlabSet.Slabs, Mode=OneWay}" SelectionMode="None" HorizontalAlignment="Left">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Slab">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="200"/>
                                <ColumnDefinition MinWidth="200"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind Range.Display}"/>
                            <TextBlock Text="{x:Bind PercentDisplay}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Foreground="{ThemeResource AppBarItemDisabledForegroundThemeBrush}" Text="*for changing values in slabs, edit the respective json file stored in the chosen folder."/>
    </StackPanel>
</Page>
