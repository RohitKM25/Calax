<Page
    x:Class="Calax.UWP.InitialiseDialog"    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="Please Pick The Slab Sets Folder to store tax slab data." TextWrapping="Wrap" />

        <StackPanel Orientation="Vertical" Spacing="16">
            <TextBlock Text="Tax Slabs Folder" VerticalAlignment="Center"/>
            <TextBlock MinWidth="300" Text="{x:Bind ViewModel.SlabSetsFolderPath,Mode=OneWay}"/>
            <Button Click="_slabSetsFolderChooseFolderButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <SymbolIcon Symbol="OpenLocal"/>
                    <TextBlock Text="Choose Folder"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>

</Page>
